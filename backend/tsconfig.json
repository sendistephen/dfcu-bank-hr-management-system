{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": ".",
    // "paths": {
    //   "@/*": ["src/*"],
    //   "@prisma/*": ["utils/*"]
    // },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  },
  "include": ["src/**/*.ts", "src/prisma/**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
